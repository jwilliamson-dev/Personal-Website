{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "env": { "browser": true },
    "extends": ["eslint:recommended"],
    "globals": {
      "React": "readonly",
      "JSX": "readonly"
    },
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            2,
            "single"
        ],
        "indent": [
            "error",
            2
        ],
        "eqeqeq": "error",
        "curly": "error",
        "no-console": [
          "error", 
          { "allow": ["warn", "error"] }
        ]

    }
}